# Allow automatic cd to directory
setopt AUTO_CD

# Allow comments in interactive shells
setopt INTERACTIVE_COMMENTS

# ========== History Options =========

# Allow shared history between instances
setopt APPEND_HISTORY

# Add to history in realtime, instead of at exit
setopt INC_APPEND_HISTORY

# Don't insert dupes into history
setopt HIST_IGNORE_DUPS

# ============ Prompt Options ==============

# Enable substitution
setopt PROMPT_SUBST

